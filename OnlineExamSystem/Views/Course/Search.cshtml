@model EntityModels.ViewModel.CourseVM.CourseSearchVm

@{
    ViewBag.Title = "Course Search";
}


<div class="page-heading">
    <h1 class="page-title">Course Search</h1>
</div>
<div class="page-content fade-in-up">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-head">
                    <div class="ibox-title">Search Criteria</div>
                    <div class="ibox-tools">
                        <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                        <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
                    </div>
                </div>
                <div class="ibox-body">
                    <form class="form-horizontal" method="post">
                        @Html.ValidationSummary(true, null, htmlAttributes: new { @class = "alert alert-danger", @role = "alert" })
                        @if (ViewBag.Message == "Saved")
                        {
                            <div class="alert alert-success" role="alert">
                                Organization has been saved succesfully!
                            </div>
                        }
                        else if (ViewBag.Message == "Failed")
                        {
                            <div class="alert alert-warning" role="alert">
                                Please! Try again later!
                            </div>
                        }
                        @Html.AntiForgeryToken()
                        <div class="form-group row">
                            <label class="col-sm-1  col-form-label" for="CourseName">Name</label>
                            <div class="col-sm-3">
                                <input type="text" id="CourseName" , name="CourseName" class="form-control" />
                            </div>
                            <label class="col-sm-1  col-form-label" for="CourseCode">Code</label>
                            <div class="col-sm-3">
                                <input type="text" id="CourseCode" , name="CourseCode" class="form-control" />
                            </div>
                            <label class="col-sm-1  col-form-label" for="CourseDescription">Description</label>
                            <div class="col-sm-3">
                                <input type="text" id="CourseDescription" , name="CourseDescription" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-1  col-form-label" for="CourseDurationFrom">Duration</label>
                            <div class="col-sm-2">
                                <input type="number" id="CourseDurationFrom" , name="CourseDuration" class="form-control" />
                            </div>
                            <label class="col-form-label" for="CourseDurationTo">To</label>
                            <div class="col-sm-2">
                                <input type="number" id="CourseDurationTo" , name="CourseDuration" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-1  col-form-label" for="CourseCreditFrom">Credit</label>
                            <div class="col-sm-2">
                                <input type="number" id="CourseCreditFrom" , name="CourseCredit" class="form-control" />
                            </div>
                            <label class="col-form-label" for="CourseCreditTo">To</label>
                            <div class="col-sm-2">
                                <input type="number" id="CourseCreditTo" , name="CourseCredit" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(c => c.OrganizationId, "Organization", htmlAttributes: new { @class = "col-sm-1 col-form-label" })
                            <div class="col-sm-4">
                                @Html.DropDownListFor(c => c.OrganizationId, Model.OrganizationSLI, "Select Organization", htmlAttributes: new { @class = "form-control",@id="OrganizationDDSearch"})
                                @Html.ValidationMessageFor(c => c.OrganizationId, null, htmlAttributes: new { @class = "text-muted text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2 ml-sm-auto">
                                <input type="search" value="Search" class="btn btn-info" id="CourseSearch" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div id="AssignTrainers" class="col-md-12">
            <div class="ibox">
                <div class="ibox-head">
                    <div class="ibox-title">Information</div>
                    <div class="ibox-tools">
                        <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                        <a class="fullscreen-link"><i class="fa fa-expand"></i></a>
                    </div>
                </div>
                <div class="ibox-body">
                    <div class="form-horizontal">
                        <div class="form-group row">
                            <div class="table-responsive col-md-12">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Sl</th>
                                            <th>Name</th>
                                            <th>Course Duration</th>
                                            <th>Fees</th>
                                            <th>Participants</th>
                                            <th>Trainers</th>
                                            <th>Batches</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="SearchedInfo">
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/AppScripts/CourseDetail.js"></script>
}