@model EntityModels.ViewModel.CourseVM.CourseInformationVm
@{
    ViewBag.Title = "Course Information";
}

<div class="page-heading">
    <h1 class="page-title">Course Information</h1>
</div>
<hr/>
<div class="page-content fade-in-up ">
    <div class="row">
        <div class="col-lg-3 col-md-4">
            <div class="ibox">
                <div class="ibox-body text-center">
                    <h4 class="font-strong m-b-10 m-t-10">@Model.Name</h4>
                    <div class="m-b-20 text-muted">@Model.Organization.Name - @Model.Organization.Code</div>
                    <div class="profile-social m-b-20">
                        <a href="javascript:;"><i class="fa fa-twitter"></i></a>
                        <a href="javascript:;"><i class="fa fa-facebook"></i></a>
                        <a href="javascript:;"><i class="fa fa-linkedin"></i></a>
                        <a href="javascript:;"><i class="fa fa-google-plus"></i></a>
                    </div>
                    <div>
                        <a href="@Url.Action("Edit", "Course",@Model)" class="btn btn-info btn-rounded m-b-5"><i class="fa fa-pencil-square-o"></i> Edit</a>
                        <a href="@Url.Action("Search", "Course")" class="btn btn-default btn-rounded m-b-5"><i class="fa fa-search"></i> Search</a>
                    </div>
                </div>
            </div>
            <div class="ibox">
                <div class="ibox-body">
                    <div class="row text-center m-b-20">
                        <div class="col-4" align="center">
                            <div class="font-20 profile-stat-count">@Model.Duration</div>
                            <div class="text-muted">Hours</div>
                        </div>
                        <div class="col-5" align="center">
                            <div class="font-20 profile-stat-count">৳.@Model.Fees</div>
                            <div class="text-muted">Taka</div>
                        </div>
                        <div class="col-3" align="center">
                            <div class="font-20 profile-stat-count">@Model.Credit</div>
                            <div class="text-muted">Credit</div>
                        </div>
                    </div>
                    <p class="text-center">@Model.Outline</p>
                </div>
            </div>
        </div>
        <div class="col-lg-9 col-md-8">
            <div class="ibox">
                <div class="ibox-body">
                    <ul class="nav nav-tabs tabs-line">
                        <li class="nav-item">
                            <a class="nav-link active" href="#tab-1" data-toggle="tab"><i class="fa fa-bars"></i> Exam</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#tab-2" data-toggle="tab"><i class="fa fa-users"></i> Participants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#tab-3" data-toggle="tab"><i class="fa fa-users"></i> Trainer</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="tab-1">
                            <h4 class="text-info m-b-20 m-t-10">Exams</h4>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Sl</th>
                                        <th>Type</th>
                                        <th>Topic</th>
                                        <th>Code</th>
                                        <th>Duration</th>
                                        <th>Mark</th>
                                    </tr>
                                </thead>
                                <tbody>
                                
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="tab-2">
                            <h5 class="text-info m-b-20 m-t-10">Participants</h5>
                            <ul class="media-list media-list-divider m-0">
                                <li class="media">
                                    <a class="media-img" href="javascript:;">
                                        <img class="img-circle" src="./assets/img/users/u1.jpg" width="40" />
                                    </a>
                                    <div class="media-body">
                                        <div class="media-heading">Jeanne Gonzalez <small class="float-right text-muted">12:05</small></div>
                                        <div class="font-13">Lorem Ipsum is simply dummy text of the printing and typesetting.</div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-pane fade" id="tab-3">
                            <h5 class="text-info m-b-20 m-t-10">Trainers</h5>
                            <ul class="media-list media-list-divider m-0">
                                <li class="media">
                                    <a class="media-img" href="javascript:;">
                                        <img class="img-circle" src="./assets/img/users/u1.jpg" width="40" />
                                    </a>
                                    <div class="media-body">
                                        <div class="media-heading">Jeanne Gonzalez <small class="float-right text-muted">12:05</small></div>
                                        <div class="font-13">Lorem Ipsum is simply dummy text of the printing and typesetting.</div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/AppScripts/CourseDetail.js"></script>
}
@section styles{
    <style>
        .profile-social a {
            font-size: 16px;
            margin: 0 10px;
            color: #999;
        }

        .profile-social a:hover {
            color: #485b6f;
        }

        .profile-stat-count {
            font-size: 22px
        }
    </style>
}