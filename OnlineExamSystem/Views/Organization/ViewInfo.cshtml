@model EntityModels.ViewModel.OrganizationVM.OrganizationInfoVm

@{
    ViewBag.Title = "ViewInfo";
}
<div class="page-heading">
    <h1 class="page-title">Organization Info</h1>
</div>
<hr>
<div class="page-content fade-in-up">
    <div class="row">
        <div class="col-lg-3 col-md-4">
            <div class="ibox">
                <div class="ibox-body text-center">
                    <div class="m-t-20">
                        <img class="img-responsive" src=@Model.Logo />
                    </div>
                    <h5 class="font-strong m-b-10 m-t-10">@Model.Name</h5>
                    <div class="m-b-20 text-muted">@Model.Address, @Model.ContactNo</div>
                    <div class="profile-social m-b-20">
                        <a href="javascript:;"><i class="fa fa-twitter"></i></a>
                        <a href="javascript:;"><i class="fa fa-facebook"></i></a>
                        <a href="javascript:;"><i class="fa fa-linkedin"></i></a>
                        <a href="javascript:;"><i class="fa fa-google-plus"></i></a>
                    </div>
                </div>
            </div>
            <hr/>
            <div class="ibox">
                <div class="ibox-body">
                    <p class="text-center">@Model.About</p>
                </div>
            </div>
        </div>
        <div class="col-lg-9 col-md-8">
            <div class="ibox">
                <div class="ibox-body">
                    <ul class="nav nav-tabs tabs-line">
                        <li class="nav-item">
                            <a class="nav-link active" href="#tab-1" data-toggle="tab"><i class="ti-bookmark-alt"></i> Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#tab-2" data-toggle="tab"><i class="ti-user"></i> Trainers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#tab-3" data-toggle="tab"><i class="ti-user" aria-hidden="true"></i> Participants</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="tab-1">
                            <h5 class="text-info m-b-20 m-t-10"><i class="fa fa-book"></i> Courses</h5>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Sl</th>
                                        <th>Name</th>
                                        <th>Duration</th>
                                        <th>Fees</th>
                                        <th>Trainers</th>
                                        <th>Batch</th>
                                        <th>Participants</th>
                                    </tr>
                                </thead>
                                <tbody>
                                
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="tab-2">
                                <h5 class="text-info m-b-20 m-t-10"><i class="fa fa-users"></i> Trainers</h5>
                                <ul class="media-list media-list-divider m-0">
                                    <li class="media">
                                        <a class="media-img" href="javascript:;">
                                            <img class="img-circle" src="./assets/img/users/u1.jpg" width="40" />
                                        </a>
                                        <div class="media-body">
                                            <div class="media-heading">Jeanne Gonzalez <small class="float-right text-muted">12:05</small></div>
                                            <div class="font-13">Lorem Ipsum is simply dummy text of the printing and typesetting.</div>
                                        </div>
                                    </li>
                                </ul>
                        </div>
                        <div class="tab-pane fade" id="tab-3">
                            <h5 class="text-info m-b-20 m-t-20"><i class="fa fa-users"></i> Participants</h5>
                            <ul class="media-list media-list-divider m-0">
                                <li class="media">
                                    <a class="media-img" href="javascript:;">
                                        <img class="img-circle" src="./assets/img/users/u1.jpg" width="40" />
                                    </a>
                                    <div class="media-body">
                                        <div class="media-heading">Jeanne Gonzalez <small class="float-right text-muted">12:05</small></div>
                                        <div class="font-13">Lorem Ipsum is simply dummy text of the printing and typesetting.</div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section styles{
    <style>
        .profile-social a {
            font-size: 16px;
            margin: 0 10px;
            color: #999;
        }

        .profile-social a:hover {
            color: #485b6f;
        }

        .profile-stat-count {
            font-size: 22px
        }
    </style> 
}